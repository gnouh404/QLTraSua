@model List<QLTraSua.ViewModels.DeleteOrderViewModel>
@{
    Layout = "~/Views/Shared/MyLayoutHelper.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h1>Danh sách Đơn Hàng</h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Tên sản phẩm</th>
            <th>Ngày Đặt Hàng</th>
            <th>Tổng Tiền</th>
            <th>Tên Khách Hàng</th>
            <th>Trạng thái</th>
            <th>Hành Động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderID</td>
                <td>@order.ProductName</td>
                <td>@order.OrderDate.ToString("dd/MM/yyyy")</td>
                <td>@order.TotalAmount.ToString("C")</td>
                <td>@order.UserName</td>
                <td>@(order.Status == true ? "Được duyệt" : "Chưa được duyệt")</td>
                <td>
                    <button style="background-color:gainsboro; color:white; text-decoration:none; border:none;border-radius:20px; padding: 5px 10px; cursor:pointer;">

                        <a style=" color:black; text-decoration:none;  padding: 5px 10px;" asp-action="AprroveOrder" asp-route-id="@order.OrderID">Duyệt đơn</a>
                    </button>
                    <button style="background-color:red; color:white; text-decoration:none; border:none;border-radius:20px; padding: 5px 10px; cursor:pointer;">

                        <a style=" color:white ; text-decoration:none; padding: 5px 10px;" asp-action="DeleteOrder" asp-route-id="@order.OrderID"> Hủy</a>
                    </button>



                </td>

            </tr>
        }
    </tbody>
</table>
