@{
    ViewData["Title"] = "Customer";
    Layout = "~/Views/Shared/MyLayoutHelper.cshtml";
}
@model IEnumerable<Customer>
<div class="ms-2 mx-2">
    <h1>Customers List</h1>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Tên khách hàng</th>
                <th>Số điện thoại</th>
                <th>Email</th>
                <th>Địa chỉ</th>
                <th>Chức năng</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model)
            {
                <tr>
                    <td>@p.CustomerName</td>  <!-- Hiển thị tên đầy đủ -->
                    <td>@p.Phone</td>
                    <td>@p.Email</td>  <!-- Chỉnh sửa để hiển thị email -->
                    <td>@p.Address</td>  <!-- Hiển thị địa chỉ -->
                    <td>
                        <a asp-action="EditCustomer" asp-route-id="@p.CustomerID">Edit</a> |
                        <a asp-action="DeleteCustomer" asp-route-id="@p.CustomerID">Delete</a>  <!-- Chỉnh sửa ID để sử dụng đúng khóa chính -->
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-action="CreateCustomer" class="btn btn-primary">Create new customer</a>
</div>
