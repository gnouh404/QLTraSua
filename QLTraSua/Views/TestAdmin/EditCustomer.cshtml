@{
    ViewData["Title"] = "EditCustomer";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
@model Customer
<div class="ms-2 mx-2">
    <h1>Edit</h1>
    <div asp-validation-summary="All" class="text-danger"></div>
    <form asp-controller="TestAdmin" asp-action="EditCustomer" asp-route-id="@Model.CustomerID"
          method="post" class="mt-3">
        <input type="hidden" asp-for="CustomerID" />
        <div style="margin-top:7px" class="form-group row">
            <label asp-for="CustomerID" class="col-sm-2 col-form-label">ID Khách hàng</label>
            <div class="col-sm-10">
                <input asp-for="CustomerID" class="form-control" placeholder="Nhập ID khách hàng ">
            </div>
            <span asp-validation-for="CustomerID" class="text-danger"></span>
        </div>
        <div style="margin-top:7px" class="form-group row">
            <label asp-for="CustomerName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="CustomerName" class="form-control" placeholder="Tên Khách Hàng">
            </div>
            <span asp-validation-for="CustomerName" class="text-danger"></span>
        </div>

        <div style="margin-top:7px" class="form-group row">
            <label asp-for="Phone" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Phone" class="form-control" placeholder="Số điện thoại">
            </div>
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>

        <div style="margin-top:7px" class="form-group row">
            <label asp-for="Email" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Email" class="form-control" placeholder="Email">
            </div>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div style="margin-top:7px" class="form-group row">
            <label asp-for="Address" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Address" class="form-control" placeholder="Địa chỉ">
            </div>
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <div style="margin-top:10px" class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Edit</button>
            </div>
        </div>
    </form>
</div>