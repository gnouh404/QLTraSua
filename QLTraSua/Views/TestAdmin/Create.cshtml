
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/MyLayoutHelper.cshtml";
}
@model Product
<div class="ms-2 mx-2">
    <h1>Create</h1>
    <div asp-validation-summary="All" class="text-danger"></div>
    <form asp-controller="TestAdmin" asp-action="Create" method="post" class="mt-3">
        <div style="margin-top:7px" class="form-group row">
            <label asp-for="ProductName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="ProductName" class="form-control" placeholder="Tên sản phẩm">
            </div>
            <span asp-validation-for="ProductName" class="text-danger"></span>
        </div>
        
        <div style="margin-top:7px" class="form-group row">
            <label asp-for="ProductPrice" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="ProductPrice" class="form-control" placeholder="Giá">
            </div>
            <span asp-validation-for="ProductPrice" class="text-danger"></span>
        </div>

        <div style="margin-top:7px" class="form-group row">
            <label asp-for="CategoryID" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <select asp-for="CategoryID" class="custom-select mr-sm-2"
                        asp-items="@ViewBag.CategoryID"></select>
            </div>
            <span asp-validation-for="CategoryID" class="text-danger"></span>
        </div>

        <div style="margin-top:7px" class="form-group row">
            <label asp-for="ImageUrl" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="ImageUrl" class="form-control" placeholder="Link ảnh">
            </div>
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>

        <div style="margin-top: 10px" class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </div>
    </form>
</div>
